package test;

import com.digi.xbee.api.XBeeDevice;
import com.digi.xbee.api.exceptions.XBeeException;


public class SerialWriteTest {
    /* Constants */
    // TODO Replace with the port where your sender module is connected to.
    private static final String PORT = "COM1";
    // TODO Replace with the baud rate of your sender module.
    private static final int BAUD_RATE = 9600;
     
    private static final char DATA_TO_SEND = 255;
     
    public static void main(String[] args) {
        XBeeDevice myDevice = new XBeeDevice(PORT, BAUD_RATE);
        byte[] dataToSend = DATA_TO_SEND.getBytes();
         
        try {
            myDevice.open();
             
            System.out.format("Sending broadcast data: '%s'", new String(dataToSend));
             
            myDevice.sendBroadcastData(dataToSend);
             
            System.out.println(" >> Success");
             
        } catch (XBeeException e) {
            System.out.println(" >> Error");
            e.printStackTrace();
            System.exit(1);
        } finally {
            myDevice.close();
        }
    }
}
